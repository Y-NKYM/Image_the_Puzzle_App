<div class="text-right">
  <% if user_signed_in? %>
  <% if post.bookmarked_by?(current_user) %>
  	<h4>
  		<%= link_to post_bookmarks_path(post.id), method: :delete, remote: true do %>
  			<i class="fa-solid fa-star" style="color: #213555;"></i>
  		<% end %>
  	</h4>
  <% else %>
  	<h4>
  		<%= link_to post_bookmarks_path(post.id), method: :post, remote: true do %>
  			<i class="fa-regular fa-star" style="color: #6c757d;"></i>
  		<% end %>
  	</h4>
  <% end %>
  <% end %>
</div>