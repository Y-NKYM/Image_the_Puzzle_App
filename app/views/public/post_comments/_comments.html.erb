<div class="row flex-lg-column">
  <div class="card my-3 border-0 col-lg-6">
  <% comments.each do |comment| %>
    <div class="p-2">
      <h5 class="m-0"><%= comment.user.name %></h5>
      <p class="card-text m-0"><%= comment.comment %></p>
      <div class="mt-1 d-flex justify-content-between">
        <span class="my-auto text-muted"><%= comment.created_at.strftime('%Y年%m月%d日') %></span>
        <% if comment.user == current_user %>
          <%= link_to "削除", post_post_comment_path(comment.post, comment), class: "btn btn-danger btn-sm", method: :delete, remote: true %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>