<div class="container w-75">
  <div class="my-5">
    <h2 class=""><%= @user.name %></h2>
    <p><%= @user.introduction %></p>
  </div>

  <div class="my-5">
    <h2><%= @user.name %>の投稿画像</h2>
    <% if @posts_all.exists? %>
      <% if @user == current_user %>
        <%= render "public/posts/post_item", model: @posts_all, colsize: "3" %>
      <% else %>
        <%= render "public/posts/post_item", model: @posts_public, colsize: "3" %>
      <% end %>
    <% else %>
      <p>投稿がありません</p>
    <% end %>
  </div>
</div>