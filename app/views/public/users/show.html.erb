<div class="container w-75">
  <div class="my-5">
    <h2 class=""><%= @user.name %></h2>
    <p><%= @user.introduction %></p>
  </div>

  <div class="my-5">
    <h2><%= @user.name %>の投稿画像</h2>
    <div>
      <% if @posts.exists? %>
        <%= render "public/posts/post_item", model: @posts, colsize: "3" %>
      <% else %>
        <p>投稿がありません</p>
      <% end %>
    </div>
    <%= paginate @posts, window: 1, left: 1, right: 1 %>
  </div>
</div>