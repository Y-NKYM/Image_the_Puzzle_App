<div class="container fit-content">
  <div class="my-5">
    <h2>編集</h2>
    <%= form_with model: @post, url: post_path, method: :patch do |f| %>
    <%= render "layouts/form_errors", model: @post %>
    <div class="margin-y mx-auto">
      <div class="field">
        <div class="d-flex padding-sm-y">
          <p class="label-width">画像</p>
          <%= image_tag @post.post_image, class: "field-width" %>
        </div>
        <%= render "layouts/post_form", f: f %>
      </div>
    </div>
    <div class="actions text-center padding-sm-y">
      <%= f.submit "編集する", class: "btn btn-success padding-x" %>
    </div>
    <% end %>
  </div>
</div>