<div class="container">

  <div class='row align-items-center justify-content-center margin-y'>
    <div class='col-md-3 admin-item-image' >
      <%= image_tag @post.post_image, class: "fit-image aspect-square w-100" %>
    </div>
      <div class='col-md-9'>
        <div class="d-flex align-items-center">
          <h4><%= @post.title %></h4>
          <% if @post.user == current_user %>
            <% if @post.is_public == false %>
              <p class="text-muted m-0 mx-3">この投稿は現在非公開です</p>
            <% end %>
          <% end %>
        </div>
        <p><%= @post.content %></p>
        <p>
          <% @post.tags.each do |tag| %>
          <%= link_to posts_path do %>
            <span>
            #<%= tag.name %>
            </span>
            <% end %>
          <% end %>
        </p>
        <p><%= @post.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></p>
        <div class="d-flex justify-content-between">
          <% if @post.user == current_user %>
          <div>
            <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success padding-x" %>
            <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger padding-x margin-x" %>
          </div>
          <% end %>
          <%#= link_to "この画像でパズル作成", post_path, class: "btn btn-primary padding-x" %>
        </div>
      </div>
  </div>

  <div class="d-flex justify-content-between" style="margin-left: 8px; margin-right: 8px;">
    <h4><%= @post.user.name%>の他の投稿</h4>
    <%= link_to "投稿一覧を見る", user_path(@post.user.id) %>
  </div>
  <%= render "public/posts/post_item", model: @user_posts, colsize: 2 %>

</div>