<div class="container fit-content">
  <div class="margin-y">
    <h2>管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="margin-y">
          <div class="field">
            <div class="d-sm-flex padding-sm-y mx-auto align-items-center">
              <%= f.label :email, "メールアドレス", class: "label-width mb-2 mb-sm-0" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "field-width form-control border-dark rounded-1" %>
            </div>

            <div class="d-sm-flex padding-sm-y mx-auto align-items-center">
              <%= f.label :password ,"パスワード", class: "label-width mb-2 mb-sm-0" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "field-width form-control border-dark rounded-1" %>
            </div>
          </div>
        </div>
        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary mb-2 sign_in padding-x" %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
   </div>
  </div>
</div>
