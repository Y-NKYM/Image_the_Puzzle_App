<div class="container">
  <div class="margin-y">
    <h2>ユーザー一覧</h2>
    <table class='table table-hover margin-y'>
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr data-href="users/<%= user.id %>/edit" class="mouse-link">
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted %>
                <span class="text-muted">退会済み</span>
              <% else %>
                <span class="text-success"><strong>有効</strong></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(function(){
    $('tr[data-href]').on('click', function(){
      location.href = $(this).data('href');
    });
  });
</script>