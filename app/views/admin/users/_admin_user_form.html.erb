<table class='table table-hover margin-y'>
  <thead>
    <tr>
      <th>#</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr data-href="users/<%= user.id %>/edit" class="mouse-link">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted %>
            <span class="text-muted">退会済み</span>
          <% else %>
            <span class="text-success"><strong>有効</strong></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(function(){
    $('tr[data-href]').on('click', function(){
      location.href = $(this).data('href');
    });
  });
</script>