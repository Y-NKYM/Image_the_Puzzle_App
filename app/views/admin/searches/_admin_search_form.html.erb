<%= form_with url: admin_searches_path, method: :get do |f| %>
<div class="d-lg-flex justify-content-center">
  <div class="col-lg-6 margin-sm-y">
    <%= f.text_field :word, placeholder: "検索", class: "form-control" %>
  </div>
  <div class="col-lg-4 margin-sm-y mx-lg-3">
    <%= f.select :range, options_for_select([['ユーザー名'], ['投稿タイトル'], ['タグ名'], ['コメント']]), {}, class: "form-select px-3" %>
  </div>
  <div class="margin-sm-y">
    <%= f.submit "検索", class: "btn btn-primary w-100 w-lg-none" %>
  </div>
</div>
<% end %>