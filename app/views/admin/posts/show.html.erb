<div class="container">
  <div class="margin-y">
    <h2>管理者側：投稿詳細</h2>
    <div class='row margin-y justify-content-center align-items-center'>
      <div class='col-md-4'>
        <%= image_tag @post.post_image, class: "fit-image aspect-square w-100" %>
      </div>
      <div class='col-md-8 my-3'>
        <table class="table table-bordered mb-0">
          <tbody>
            <tr>
              <th class="w-25">投稿ID</th>
              <td><%= @post.id %></td>
            </tr>
            <tr>
              <th class="w-25">投稿者</th>
              <td data-href="../users/<%= @post.user.id %>/edit" class="mouse-link" style="color: #0693e3"><%= @post.user.name %></td>
            </tr>
            <tr>
              <th>タイトル</th>
              <td><%= @post.title %></td>
            </tr>
            <tr>
              <th>キャプション</th>
              <td><%= @post.content %></td>
            </tr>
            <tr>
              <th>タグ</th>
              <td>
                <% @post.tags.each do |tag| %>
                <span>#<%= tag.name %></span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>投稿日</th>
              <td><%= @post.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
            </tr>
            <tr>
              <th>公開範囲</th>
              <td>
                <% if @post.is_public %>
                  <span>公開</span>
                <% else %>
                  <span>非公開</span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <% if @post.is_active %>
                  <span class="text-success"><strong>正常<strong></span>
                <% else %>
                  <span class="text-danger">問題あり</span>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-around my-3">
        <%= link_to "編集", edit_admin_post_path(@post.id), class: "btn btn-success padding-x" %>
        <%= link_to "削除", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger padding-x" %>
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    $('td[data-href]').on('click', function(){
      location.href = $(this).data('href');
    });
  });
</script>